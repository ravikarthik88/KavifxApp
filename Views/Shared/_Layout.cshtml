@using System.Security.Claims
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kavifx</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet"/>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon"/>
</head>
<body>    
    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
        <div class="container px-5">
            <a class="navbar-brand text-white" asp-controller="Home" asp-action="Index">Kavifx</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link text-white" aria-current="page" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="nav-item"><a class="nav-link text-white" asp-controller="About" asp-action="Index">About</a></li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-white" id="navbarDropdownBlog" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">Design</a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdownBlog">
                            <li><a class="dropdown-item" asp-controller="Design" asp-action="web-design">Web Design</a></li>
                            <li><a class="dropdown-item" asp-controller="Design" asp-action="graphics-design">Graphics Design</a></li>
                        </ul>
                    </li>
                    <li class="nav-item"><a class="nav-link text-white" asp-controller="services" asp-action="Index">Services</a></li>
                    <li class="nav-item"><a class="nav-link text-white" asp-controller="careers" asp-action="Index">Careers</a></li>
                </ul>
                <partial name="_LoginPartial" />
            </div>
        </div>
    </nav>
    <div class="container-fluid">
        @RenderBody()
    </div>
    <footer class="container-fluid">
        <div class="text-center text-lg-start text-white" style="background-color: var(--bs-gray-700); ">
            <div class="d-flex justify-content-between p-4" style="background-color: var(--bs-purple);">
                <div class="me-5">
                    <span>Get connected with us on social networks:</span>
                </div>
                <div>
                    <a href="#" class="text-white me-4 p-2 text-decoration-none">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                    <a href="#" class="text-white me-4 p-2 text-decoration-none">
                        <i class="fab fa-twitter"></i>
                    </a>
                    <a href="#" class="text-white me-4 p-2 text-decoration-none">
                        <i class="fab fa-google"></i>
                    </a>
                    <a href="#" class="text-white me-4 p-2 text-decoration-none">
                        <i class="fab fa-instagram"></i>
                    </a>
                    <a href="#" class="text-white me-4 p-2 text-decoration-none">
                        <i class="fab fa-linkedin"></i>
                    </a>
                    <a href="#" class="text-white me-4 p-2 text-decoration-none">
                        <i class="fab fa-github"></i>
                    </a>
                </div>
            </div>
            <section>
                <div class="container text-md-start mt-5">
                    <div class="row mt-3">
                        <div class="col-md-3 col-lg-4 col-xl-3 mx-auto mb-4">
                            <h6 class="text-uppercase fw-bold">kavifx</h6>
                            <hr class="mb-4 mt-0 d-inline-block mx-auto"
                                style="width: 60px; background-color: #7c4dff; height: 2px" />
                            <p>
                                The Company is a creating free web templates, Open-source bootstrap themes created by <a class="text-decoration-none text-white" href="http://kavifx.com">Kavifx.com</a>
                            </p>
                        </div>
                        <div class="col-md-2 col-lg-2 col-xl-2 mx-auto mb-4">
                            <!-- Links -->
                            <h6 class="text-uppercase fw-bold">Products</h6>
                            <hr class="mb-4 mt-0 d-inline-block mx-auto"
                                style="width: 60px; background-color: #7c4dff; height: 2px" />
                            <p>
                                <a asp-controller="Home" asp-action="web-design" class="text-white text-decoration-none">Web Design</a>
                            </p>
                            <p>
                                <a asp-controller="Home" asp-action="graphics-design" class="text-white text-decoration-none">Graphics Design</a>
                            </p>
                            <p>
                                <a asp-controller="Home" asp-action="services" class="text-white text-decoration-none">App Development</a>
                            </p>
                            <p>
                                <a asp-controller="Home" asp-action="services" class="text-white text-decoration-none">UI / UX Development</a>
                            </p>
                        </div>
                        <div class="col-md-2 col-lg-2 col-xl-2 mx-auto mb-4">
                            <!-- Links -->
                            <h6 class="text-uppercase fw-bold">Useful Links</h6>
                            <hr class="mb-4 mt-0 d-inline-block mx-auto"
                                style="width: 60px; background-color: #7c4dff; height: 2px" />
                            <p>
                                <a asp-controller="Home" asp-action="About" class="text-white text-decoration-none">About</a>
                            </p>
                            <p>
                                <a asp-controller="Home" asp-action="web-design" class="text-white text-decoration-none">Web Design</a>
                            </p>
                            <p>
                                <a asp-controller="Home" asp-action="graphics-design" class="text-white text-decoration-none">Graphics Design</a>
                            </p>
                            <p>
                                <a asp-controller="Home" asp-action="services" class="text-white text-decoration-none">Services</a>
                            </p>
                        </div>
                        <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mb-md-0 mb-4">
                            <!-- Links -->
                            <h6 class="text-uppercase fw-bold">Contact</h6>
                            <hr class="mb-4 mt-0 d-inline-block mx-auto"
                                style="width: 60px; background-color: #7c4dff; height: 2px" />
                            <p><i class="fas fa-home mr-3"></i> Kuniyamuthur,Coimbatore - 8.</p>
                            <p><i class="fas fa-envelope mr-3"></i> kaaarthikk&#64;gmail.com</p>
                            <p><i class="fas fa-phone-alt mr-3"></i> + 91 99444 66627</p>
                            <p><i class="fab fa-whatsapp mr-3"></i> + 91 88071 85627</p>
                        </div>
                    </div>
                </div>
            </section>
            <div class="text-center p-3"
                 style="background-color: var(--bs-gray-900)">
                Copyright&nbsp;&copy;&nbsp;Kavifx&nbsp;2014
            </div>
        </div>
    </footer>
    <script>
        var nav = document.querySelector('nav');
        window.addEventListener('scroll', function () {            
            if (window.pageYOffset > 100) {
                nav.classList.add('bg-dark', 'shadow');
            } else {
                nav.classList.remove('bg-dark', 'shadow');
            }
        })
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
